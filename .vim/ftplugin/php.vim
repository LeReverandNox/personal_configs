setlocal textwidth=80
setlocal formatoptions+=ctr

"*** On modifie les regles d'indentation
" On utilise des espaces au lieu des tabs
set noexpandtab
"Si on utilise des tabs, on le fait intelligement
set smarttab
" 1 tab = 4 espaces
set tabstop=2
set softtabstop=2
" 4 espaces pour l'indentation
set shiftwidth=2
set shiftround
